.register-form
  h2 登录
  form.pure-form.pure-form-aligned
    fieldset
      .pure-control-group
        label(for='username') 用户名
        input#username(name='username', type='text', placeholder='用户名', required='', ng-model='user.username')
        span.pure-form-message-inline.errmsg {{errmsg.username}}
      .pure-control-group
        label(for='password') 密码
        input#password(name='password', type='password', placeholder='密码', required='', ng-model='user.password')
        span.pure-form-message-inline.errmsg {{errmsg.password}}
      .pure-controls
        button.pure-button(type='reset') 重置
        button#submit.pure-button.pure-button-primary(ng-click='login()') 登录